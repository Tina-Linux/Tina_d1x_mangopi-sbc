#!/bin/sh

# mk missing dev node

start() {
    mkdir /dev/pts
    mkdir /dev/shm
    mount -t devpts /dev/pts /dev/pts
}

stop() {
    echo "stop..."
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart|reload)
        stop
        start
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?

